<div class="h4 mt-4">Пользователи
    <a class="btn btn-sm btn-success" href="/users/add">Добавить пользователя</a>
</div>

<% if (typeof success !== 'undefined') { %>
    <div class="alert alert-success mt-4" role="alert"><%= success %></div>
<% } %>

<table class="table mt-4">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Имя</th>
        <th scope="col">Э-почта</th>
        <th scope="col">Роль</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>

    <% for (const user of users) { %>
        <tr>
            <th scope="row" class="align-middle"><%= user.id %></th>
            <td class="align-middle"><%= user.name %></td>
            <td class="align-middle"><%= user.email %></td>
            <td class="align-middle"><%= user.role %></td>
            <td class="align-middle">
                <a class="btn btn-sm btn-warning" href="/users/<%= user.id %>/edit">Редактировать</a>
                <a class="btn btn-sm btn-danger" href="/users/<%= user.id %>/delete">Удалить</a>
            </td>
        </tr>
    <% } %>

    </tbody>
</table>