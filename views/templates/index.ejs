<div class="h4 mt-4">Шаблон карточек
    <a class="btn btn-sm btn-success" href="/templates/add">Добавить шаблон</a>
</div>

<% if (typeof success !== 'undefined') { %>
    <div class="alert alert-success mt-4" role="alert"><%= success %></div>
<% } %>

<table class="table mt-4">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Название</th>
        <th scope="col">Код</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>

    <% for (const template of templates) { %>
        <tr>
            <th scope="row" class="align-middle"><%= template.id %></th>
            <td class="align-middle"><%= template.name %></td>
            <td class="align-middle"><%= template.slug %></td>
            <td class="align-middle">
                <a class="btn btn-sm btn-warning" href="/templates/<%= template.id %>/edit">Редактировать</a>
                <a class="btn btn-sm btn-danger" href="/templates/<%= template.id %>/delete">Удалить</a>
            </td>
        </tr>
    <% } %>

    </tbody>
</table>