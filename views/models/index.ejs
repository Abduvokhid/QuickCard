<div class="h4 mt-4"><%= model.name %>
    <a class="btn btn-sm btn-success" href="/<%= model.slug %>/add">Добавить запись</a>
</div>

<% if (typeof success !== 'undefined') { %>
    <div class="alert alert-success mt-4" role="alert"><%= success %></div>
<% } %>

<table class="table mt-4">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Название</th>
        <th scope="col">Действия</th>
    </tr>
    </thead>
    <tbody>

    <% for (const record of records) { %>
        <tr>
            <th scope="row" class="align-middle"><a href="/<%= model.slug %>/<%= record.id %>"
                                                    class="d-block text-black text-decoration-none"><%= record.id %></a>
            </th>
            <td class="align-middle"><a href="/<%= model.slug %>/<%= record.id %>"
                                        class="d-block text-black text-decoration-none"><%= record.title %></a></td>
            <td class="align-middle">
                <form action="/<%= model.slug %>/<%= record.id %>/delete" method="post">
                    <a class="btn btn-sm btn-warning" href="/<%= model.slug %>/<%= record.id %>/edit">Редактировать</a>
                    <button class="btn btn-sm btn-danger" href="/<%= model.slug %>/<%= record.id %>/delete">Удалить
                    </button>
                </form>
            </td>
        </tr>
    <% } %>

    </tbody>
</table>